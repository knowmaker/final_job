<h1><%= @post.title %></h1>
<p><%= @post.body %></p>
<hr>
<%= link_to "Редактировать", edit_post_path(@post), :class => 'btn btn-warning' %>
<%= button_to "Удалить", post_path(@post), method: :delete, data: {confirm: "Удаляем?"}, :class => 'btn btn-danger' %>
<hr>
<h2>Все комментарии</h2>
<% @post.comments.each do |comment| %>
  <div class="alert alert-light">
    <p><strong><%= comment.username %></strong>: <%=comment.body %></p>
  </div>
<% end %>

<hr>
<h2>Добавление Комментария</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    Пользователь<br>
    <%= f.text_field(:username,{:class => 'form-control'}) %>
  </p>
  <p>
    Текст комментария<br>
    <%= f.text_area(:body,{:class => 'form-control'}) %>
  </p>
  <p>
    <%= f.submit("добавить", {:class => 'btn btn-success'}) %>
  </p>
<% end %>